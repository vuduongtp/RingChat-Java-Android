<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    tools:ignore="PrivateResource">

    <ImageView
        android:id="@+id/imgAvatarMeMessage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="-2dp"
        android:layout_below="@+id/txtTimeMessageMe"
        android:layout_alignParentEnd="true"
        android:src="@drawable/user"
        android:padding="10dp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/txtTimeMessageMe"
        android:layout_marginEnd="70dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/roboto_regular"
        android:gravity="end"
        android:textSize="12sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_below="@+id/txtTimeMessageMe"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/imgAvatarMeMessage"
        android:textSize="16sp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/chat_bubble_me"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgIconMessageMe"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtContextMessageMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text=""
            android:layout_margin="5dp"/>

    </LinearLayout>


</RelativeLayout>